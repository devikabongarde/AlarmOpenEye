#:kivy 2.1.0
BoxLayout:
    orientation: 'vertical'
    padding: 20
    spacing: 10

    Label:
        text: "Alarm Clock with Eye Detection"
        font_size: 24
        size_hint_y: None
        height: 40

    Label:
        text: "Enter Alarm Time (HH:MM)"
        font_size: 18
        size_hint_y: None
        height: 30

    TextInput:
        id: alarm_time
        hint_text: "24-hour format, e.g., 15:30"
        font_size: 18
        multiline: False
        size_hint_y: None
        height: 40

    Button:
        text: "Set Alarm"
        font_size: 18
        size_hint_y: None
        height: 50
        on_release: app.start_alarm(alarm_time.text)

    Label:
        id: status_label
        text: "Status: Waiting for alarm time"
        font_size: 16
        size_hint_y: None
        height: 30
